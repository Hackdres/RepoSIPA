{% extends 'base.html.twig' %}

{% block body %}
    <h1>Responsables</h1>

    <table>
        <tbody>
            <tr>
                <th>Idres</th>
                <td>{{ responsable.idres }}</td>
            </tr>
            <tr>
                <th>Estadores</th>
                <td>{{ responsable.estadores }}</td>
            </tr>
            <tr>
                <th>Fechares</th>
                <td>{% if responsable.fechares %}{{ responsable.fechares|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_responsables_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_responsables_edit', { 'id': responsable.idres }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
